# Telegram 图床配置模板
# 复制此文件为 .env 并填写实际值

# ===================== 必填配置 =====================
# Telegram Bot Token (从 @BotFather 获取)
BOT_TOKEN=your_bot_token_here

# 存储频道/群组 ID (负数表示群组)
STORAGE_CHAT_ID=-1001234567890

# ===================== 安全配置（强烈建议设置） =====================
# Flask 会话密钥 (建议使用随机字符串)
SECRET_KEY=your_random_secret_key_here

# 管理员用户名
ADMIN_USERNAME=admin

# 管理员密码 (首次启动会自动生成，建议手动设置)
ADMIN_PASSWORD=your_secure_password_here

# ===================== 服务器配置 =====================
PORT=18793
HOST=0.0.0.0

# 允许的跨域来源 (生产环境建议设置具体域名)
# 多个域名用逗号分隔，如: https://example.com,https://www.example.com
ALLOWED_ORIGINS=*

# ===================== CDN 配置 =====================
CDN_ENABLED=true
CLOUDFLARE_CDN_DOMAIN=your_cdn_domain.com
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id

# CDN 监控
CDN_MONITOR_ENABLED=true
CDN_REDIRECT_ENABLED=true

# ===================== 群组上传配置 =====================
ENABLE_GROUP_UPLOAD=true
GROUP_UPLOAD_ADMIN_ONLY=false
GROUP_ADMIN_IDS=123456789,987654321
GROUP_UPLOAD_REPLY=true

# ===================== 数据库配置 =====================
# 默认使用当前目录下的 telegram_imagebed.db
DATABASE_PATH=./data/telegram_imagebed.db

# ===================== 日志配置 =====================
LOG_LEVEL=INFO
LOG_FILE=./data/telegram_imagebed.log